#!/usr/local/bin/earl

#--- This file can only be run if EARL is installed https://github.com/malloc-nbytes/EARL/
#--- Although this file is not necessary

module Main

import "std/system.earl"

let run = len(argv()) > 1 && argv()[1] == "run";
let build = "dune exec ./bin/main.exe --profile=release";
if run {
    build += " > llvm-testing/main.ll && cd llvm-testing && ./build.earl && ./main && cd ..";
}
System::cmd_wcheck(build);
