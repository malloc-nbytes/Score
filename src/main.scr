-- Desc:
--   Takes a number and performs the
--   'collatz conjecture' on it. Eventually
--   it will go down to 0.
proc collatz(num: i32): i32 {
    -- while num = 1, appear, loop break

    while num != 1 {
        if num % 2 == 0 {
            num = num/2;
            printf("%d\n", num);
        }
        else {
            num = 3*num + 1;
            printf("%d\n", num);
        }
    }
    
    return 0;
}

proc main(void): i32 {
    collatz(area(1000));
    return 0;
}