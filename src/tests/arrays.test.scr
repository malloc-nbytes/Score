proc arr_i32_decl(void): i32 {
    printf("arr_i32_decl\n");

    let arr: i32[..] = {1,2,3};
    return arr[0] == 1 && arr[1] == 2 && arr[2] == 3;
}

proc arr_usize_decl(void): i32 {
    printf("arr_usize_decl\n");

    let arr: usize[..] = {1,2,3};
    return arr[0] == 1 && arr[1] == 2 && arr[2] == 3;
}

proc zero_init(void): i32 {
    printf("zero_init\n");

    let arr: i32[10] = {0};
    for let i: usize = 0; i < 10; i += 1; {
        if arr[i] != 0 {
            return 0;
        }
    }
    return 1;
}

proc arr_sum(void): i32 {
    printf("arr_sum\n");

    let arr: i32[5] = {1,2,3,4,5};
    let res: i32 = 0;
    for let i: usize = 0; i < 5; i += 1; {
        res += arr[i];
    }
    return res;
}

proc find_largest(arr: i32[..], n: usize): i32 {
    printf("find_largest\n");

    let m: i32 = 0;
    for let i: usize = 0; i < n; i += 1; {
        if arr[i] > m {
            m = arr[i];
        }
    }
    return m;
}

proc most_freq(arr: i32[..], n: usize): i32 {
    printf("most_freq\n");

    let freqs: i32[10] = {0};
    for let i: usize = 0; i < n; i += 1; {
        freqs[usize arr[i]] += 1;
    }

    let m: i32 = 0;
    for let i: usize = 0; i < 10; i += 1; {
        if freqs[i] > freqs[usize m] {
            m = i32 i;
        }
    }

    return m;
}

proc modify_i32_arr(arr: i32[..]): void {
    printf("modify_arr\n");

    arr[1] = 100;
}

proc arr_str_decl(void): i32 {
    printf("arr_str_decl\n");

    let arr: str[..] = {"foo", "bar", "baz"};
    return (strcmp(arr[0], "foo") == 0)
    && (strcmp(arr[1], "bar") == 0)
    && (strcmp(arr[2], "baz") == 0);
}

proc modify_str_arr(arr: str[..], s: str): void {
    printf("modify_str_arr\n");
    arr[1] = s;
}

export proc main(void): i32 {
    if arr_i32_decl() != 1 {
        printf("arr_i32_decl failed\n");
        exit(1);
    }

    if arr_usize_decl() != 1 {
        printf("arr_usize_decl failed\n");
        exit(1);
    }

    if zero_init() != 1 {
        printf("zero_init failed\n");
        exit(1);
    }

    if arr_sum() != 15 {
        printf("arr_sum failed\n");
        exit(1);
    }

    let find_largest_arr: i32[..] = {1,5,2,3,4};
    let find_largest_arr_len: usize = 5;
    if find_largest(find_largest_arr, find_largest_arr_len) != 5 {
        printf("find_largest failed\n");
        exit(1);
    }

    let most_freq_arr: i32[..] = {1,1,5,5,1};
    let most_freq_arr_len: usize = 5;
    if most_freq(most_freq_arr, most_freq_arr_len) != 1 {
        printf("most_freq failed\n");
        exit(1);
    }

    let modify_i32_arr: i32[..] = {1,2,3};
    modify_i32_arr(modify_i32_arr);
    if modify_i32_arr[1] != 100 {
        printf("modify_i32_arr failed\n");
        exit(1);
    }

    if arr_str_decl() != 1 {
        printf("arr_str_decl failed\n");
        exit(1);
    }

    let modify_str_arr: str[..] = {"hello", "world"};
    let modify_str_arr_new: str = "foo";
    modify_str_arr(modify_str_arr, modify_str_arr_new);
    if strcmp(modify_str_arr[1], "foo") != 0 {
        printf("modify_str_arr failed\n");
        exit(1);
    }

    return 0;
}
